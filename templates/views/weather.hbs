<!DOCTYPE html>
<html lang="en">
<head>
    {{>headlinks}}
</head>
<body>
        {{>navbar}}

        <div class="container-fluid main-header">
          <div class="row">
              <div class="col-md-10 col-12 mx-auto">
                  <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                  </div>

                  <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day"></p>
                        <p id="today_date">13 OCT</p> 
                    </div>
                    <div class="main_layer">
                        <p class="city_name" id="cityname">Get Output Here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">1</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa-solid fa-cloud"></i></p>
                        </div>
                    </div>
                  </div>  
              </div>
          </div>    
        </div>  


        {{>footer}}

        <script src="js/main.js"></script>
        <script>
            
            const getCurrentDay=()=>{
                let weekday=new Array()
                weekday[0]="Sunday"
                weekday[1]="Monday"
                weekday[2]="Tuesday"
                weekday[3]="Wednesday"
                weekday[4]="Thursday"
                weekday[5]="Friday"
                weekday[6]="Saturday"
                let currentTime=new Date()
                let days=weekday[currentTime.getDay()]
                let day= document.getElementById("day")
                day.innerText=days
            }   
            const getDayMonth=()=>{
                const date = new Date(); 
                let day= date.getDate(); 
                const month = ["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"];
                let name = month[date.getMonth()];
                let todayDate=document.getElementById("today_date")
                todayDate.innerText=`${day} ${name}`
            }
            getCurrentDay()
            getDayMonth()

        </script>
</body>
</html>